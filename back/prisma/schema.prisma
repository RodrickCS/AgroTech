// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funcionarios {
  id_funcionario Int    @id @default(autoincrement())
  nome           String
  email          String @unique
  senha          String
  role           String @default("Comum")
  telefone       String @unique
  cpf            String @unique
  endereco       String
}

model Motoristas {
  id_motorista Int        @id @default(autoincrement())
  nome         String
  telefone     String     @unique
  cpf          String     @unique
  endereco     String
  veiculos     Veiculos[]
  viagem       Viagens[]
}

model Manutencoes {
  id_manutencao Int       @id @default(autoincrement())
  id_veiculo    Int
  data_inicio   DateTime
  data_fim      DateTime?
  valor_gasto   Float
  descricao     String
  veiculos      Veiculos  @relation(fields: [id_veiculo], references: [id_veiculo])
}

model Frota {
  id_frota Int        @id @default(autoincrement())
  tipo     String     @unique
  veiculos Veiculos[]
}

model Veiculos {
  id_veiculo  Int           @id @default(autoincrement())
  marca       String
  placa       String        @unique
  cor         String
  idMotorista Int
  disponivel  Boolean
  manutencoes Manutencoes[]
  motoristas  Motoristas    @relation(fields: [idMotorista], references: [id_motorista])
  frota       Frota         @relation(fields: [idFrota], references: [id_frota])
  idFrota     Int
  viagens     Viagens[]
}

model Viagens {
  id_viagem    Int        @id @default(autoincrement())
  id_veiculo   Int
  id_motorista Int
  descricao    String
  hora_saida   DateTime
  hora_retorno DateTime?
  veiculos     Veiculos   @relation(fields: [id_veiculo], references: [id_veiculo])
  motorista    Motoristas @relation(fields: [id_motorista], references: [id_motorista])
}
